<%= form_with(model: order) do |form| %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, size: 40 %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_area :address, rows: 3, cols: 40 %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, size: 40 %>
  </div>

  <div id='pay-type-component'></div>

  <div class="actions">
    <%= form.submit 'Place Order' %>
  </div>
<% end %>
